<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.uit.smarthomecontrol.util.CustomAlarm
        android:id="@+id/alarm_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
        app:max="24"
        app:text_color="@color/text_color"
        app:text_size="23sp"
        app:wheel_active_color="@color/wheel_active_color"
        app:wheel_unactive_color="@color/wheel_unactive_color"
        app:alarm_active_color="@color/alarm_active_color"
        app:alarm_unactive_color="@color/alarm_unactive_color"/>

</LinearLayout>