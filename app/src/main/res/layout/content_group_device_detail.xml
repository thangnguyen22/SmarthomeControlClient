<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uit.smarthomecontrol.GroupDeviceDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin kịch bản"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/text_color"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textSize="17dp"
            android:id="@+id/txtGroupName"
            android:hint="Tên kịch bản"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textSize="17dp"
            android:id="@+id/txtKeyword"
            android:hint="Từ khóa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách thiết bị"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/text_color"/>
        <ListView
            android:id="@+id/list_all_sensor"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbarStyle="outsideOverlay"
            android:paddingTop="10dp"/>
    </LinearLayout>

</LinearLayout>
